//switch case

<!DOCTYPE html>
<html>
<body>


       
      <?php
$a ='vimal';
switch($a){
 case ram:
  echo "hello ram";
  break;
  case sam:
  echo "hello sam";
  break;
  case vimal:
  echo "hello vimal";
  break;
  default :
  echo'plz selcet correct option';
}
?>


</body>
</html>


